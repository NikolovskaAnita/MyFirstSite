@model List<CategoryModel>

@{
    ViewBag.Title = "Index";
}
<table class="table  table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@Model[i].Id" class="btn btn-primary">Details</a>
                    <a asp-action="CreateEditCategory" asp-route-id="@Model[i].Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@Model[i].Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>